<form action="https://your-n8n-domain.com/webhook/tgb-order-ph" method="POST">
  <input type="email" name="email" required>
  <input type="text" name="receiver_name" required>
  <input type="text" name="fb_ig_name" placeholder="Facebook/IG username">
  <textarea name="full_address" required></textarea>
  <input type="tel" name="contact_number" required>
  
  <select name="payment_method" required>
    <option value="STRAIGHT PAYMENT">Straight Payment</option>
    <option value="COD">Cash on Delivery</option>
    <option value="COP">Cash on Pickup</option>
    <option value="LAYAWAY">Layaway</option>
    <option value="WALK IN">Walk In</option>
  </select>
  
  <select name="region" required>
    <option value="LUZON">Luzon</option>
    <option value="VISAYAS">Visayas</option>
    <option value="MINDANAO">Mindanao</option>
  </select>
  
  <input type="text" name="city" required>
  <textarea name="special_request" placeholder="Optional"></textarea>
  
  <button type="submit">Submit Order</button>
</form>
